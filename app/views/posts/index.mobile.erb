<div data-role="header">
  <h1>Posts</h1>
	<%= link_to 'Add', new_post_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>
 
<div data-role="content">
  <ul data-role="listview">
    <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post %>
      <%= link_to 'edit post', edit_post_path(post), "data-icon" => "gear" %>
    </li>
    <% end %>
  </ul>
</div>


<div data-role="footer">
	<div data-role="navbar">
		<ul>
			<% if current_user %>
			  <li>
					<%= link_to 'Log out', log_out_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
				</li>
			<% else %>
			  <li>
			  	<%= link_to 'Sign up', sign_up_path, "data-icon" => "plus", "class" => "ui-btn-left" %>
					<%= link_to 'Log in', log_in_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
			  </li>
			<% end %>
		</ul>
	</div>
</div>
