<div data-role="header">
	<%= link_to 'Back', posts_url, "data-rel" => "back", "data-icon" => "arrow-l", "class" => "ui-btn-left" %>
  <h1>Log in</h1>
  <%= link_to 'Home', posts_url, "class" => "ui-btn-right", "data-icon" => "home", "data-iconpos" => "notext" %>
</div>

<div data-role="content" data-theme="a">
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :username %><br />
    <%= text_field_tag :username, params[:username] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Log in", "data-theme" => "a" %></p>
<% end %>
</div>